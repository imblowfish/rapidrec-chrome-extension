{
  "name": "Rapidrec",
  "description": "Write me",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./public/popup.html"
  },
  "background": {
    "service_worker": "./public/background.bundle.mjs",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*"
  ]
}
